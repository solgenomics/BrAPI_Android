<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nicolas.brapi.PickADatabase">

    <TextView
        android:id="@+id/textView"
        android:layout_width="157dp"
        android:layout_height="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Pick A BTI Database:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/bCreateDatabase"
        android:layout_width="154dp"
        android:layout_height="44dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="17dp"
        android:onClick="selectedAddADatabase"
        android:text="create Database"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="17dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="213dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="423dp"
        android:orientation="vertical"
        android:layout_marginTop="90dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="-30dp">

                <Button
                    android:id="@+id/MusaDatabase"
                    android:layout_width="342dp"
                    android:layout_height="59dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="24dp"
                    android:onClick="selectMusaDatabase"
                    android:text="Musa"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/CassavaDatabase" />

                <Button
                    android:id="@+id/CassavaDatabase"
                    android:layout_width="342dp"
                    android:layout_height="59dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="24dp"
                    android:onClick="selectCassavaDatabase"
                    android:text="Cassava"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/SweetPotatoDatabase"
                    android:layout_width="342dp"
                    android:layout_height="59dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="24dp"
                    android:onClick="selectSweetPotatoDatabase"
                    android:text="Sweet Potato"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <Button
                    android:id="@+id/YamDatabase"
                    android:layout_width="342dp"
                    android:layout_height="59dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="24dp"
                    android:onClick="selectYamDatabase"
                    android:text="Yam"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            </LinearLayout>


        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
