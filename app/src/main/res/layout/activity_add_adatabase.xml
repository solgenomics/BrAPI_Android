<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.nicolas.brapi.AddADatabase">

    <EditText
        android:id="@+id/DatabaseName"
        android:layout_width="339dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="67dp"
        android:hint="Database Name"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/URLFormat"
        android:layout_width="344dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="URL format: https://[crop name]base.org/[crop name]"
        android:textSize="14sp"
        android:textColorHint="#fff"
        android:textColor="#fff"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/DatabaseName"
        app:layout_constraintHorizontal_bias="0.517"
        tools:layout_editor_absoluteY="154dp" />

    <Button
        android:id="@+id/bCreate"
        android:layout_width="230dp"
        android:layout_height="59dp"
        style="@style/pickADatabase_smallButton"
        android:onClick="onClick"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.672" />


</android.support.constraint.ConstraintLayout>
