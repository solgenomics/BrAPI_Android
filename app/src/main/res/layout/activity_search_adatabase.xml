<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nicolas.brapi.SearchADatabase"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Database:"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/spinner6"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/spinner6" />

    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/textView3"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category:"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_alignTop="@+id/spinner"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignBottom="@+id/spinner"
        android:layout_alignEnd="@+id/textView3" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/spinner6"
        android:layout_toEndOf="@+id/Category" />

    <Button
        android:id="@+id/SearchId"
        style="@style/pickADatabase_smallButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:elevation="0dp"
        android:text="Search" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Search:"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/spinner6"
        android:layout_above="@+id/textView3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
