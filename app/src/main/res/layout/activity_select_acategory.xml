<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.nicolas.brapi.SelectACategory">


    <TextView
        android:id="@+id/CurrentDatabase"
        android:layout_width="342dp"
        android:layout_height="34dp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ScrollView
        android:layout_height="410dp"
        android:layout_width="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/CurrentDatabase">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <Button
                android:id="@+id/Germplasm"
                style="@style/selectCategory_Button_style"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:onClick="SelectGermplasm"
                android:text="Germplasm"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/Phenotypes"
                style="@style/selectCategory_Button_style"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:onClick="SelectPhenotypes"
                android:text="Phenotypes"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/Traits"
                style="@style/selectCategory_Button_style"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:onClick="SelectTraits"
                android:text="Traits"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/Locations"
                style="@style/selectCategory_Button_style"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:onClick="SelectLocations"
                android:text="Locations"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/Studies"
                style="@style/selectCategory_Button_style"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:onClick="SelectStudies"
                android:text="Studies"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/Trials"
                style="@style/selectCategory_Button_style"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="20dp"
                android:onClick="SelectTrials"
                android:text="Trials"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.227" />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
